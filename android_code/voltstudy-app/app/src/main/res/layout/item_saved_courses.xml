<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:id="@+id/cvSavedCoursesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/btn_delete_saved_course"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_delete_filled"
            />

        <ImageView
            android:id="@+id/img_course_saved_courses_list"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/layout_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/img_course_saved_courses_list"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_course_name_saved_courses_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_course_author_saved_courses_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Author Name"
                android:textColor="@color/colorWhite"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_course_category_saved_courses_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Category"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/bullet"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/txt_course_subcategory_saved_courses_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Sub Category"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_course_lang_saved_courses_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Language"
                android:textColor="@color/colorPrimaryLight"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_course_type_saved_course_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@color/colorPrimaryDark"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Text &amp; Videos"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:id="@+id/linear_price_layout_saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rupee_high_saved_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="₹"
                    android:textSize="14sp"
                    android:textColor="@color/colorLightGray"/>

                <TextView
                    android:id="@+id/tvCourseHighSavedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="499"
                    android:textSize="14sp"
                    android:textColor="@color/colorLightGray"/>


                <TextView
                    android:id="@+id/rupee_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="₹"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_course_price_saved_courses_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="499"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
